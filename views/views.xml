<odoo>
  <data>
    <!-- explicit list view definition -->
    <!--libros-->
    <record model="ir.ui.view" id="biblioteca_libro_list">
      <field name="name">biblioteca libro list</field>
      <field name="model">biblioteca.libro</field>
      <field name="arch" type="xml">
        <list>
          <field name="firstname"/>
          <field name="author"/>
          <field name="isbn"/>
          <field name="genero"/>
          <field name="fecha"/>
          <field name="description"/>
          <field name="editorial"/>
          <field name="value"/>
          <field name="estado"/>
          <field name="value2"/>
          <field name="ubicacion"/>
        </list>
      </field>
    </record>

    <record model="ir.ui.view" id="biblioteca_libro_form">
      <field name="name">biblioteca libro form</field>
      <field name="model">biblioteca.libro</field>
      <field name="arch" type="xml">
        <form>
          <group>
          <field name="firstname"/>
          <field name="author"/>
          <field name="isbn"/>
          <field name="genero"/>
          <field name="fecha"/>
          <field name="description"/>
          <field name="editorial"/>
          <field name="value"/>
          <field name="estado"/>
          <field name="value2"/>
          <field name="ubicacion"/>
          </group>
        </form>
      </field>
    </record>
    <!--autores-->
    <record model ="ir.ui.view" id="biblioteca_author_list">
      <field name ="name">biblioteca author list</field>
      <field name ="model">biblioteca.author</field>
      <field name ="arch" type="xml">
        <list>
          <field name="firstname"/>
          <field name="lastname"/>
        </list>
      </field>
    </record>

    <record model ="ir.ui.view" id="biblioteca_author_form">
      <field name ="name">biblioteca author form</field>
      <field name ="model">biblioteca.author</field>
      <field name ="arch" type="xml">
        <form>
          <group>
          <field name="firstname"/>
          <field name="lastname"/>
          </group>
        </form>
      </field>
    </record>
    <!--usuarios-->
    <record model ="ir.ui.view" id="biblioteca_usuario_list">
      <field name ="name">biblioteca usuario list</field>
      <field name ="model">biblioteca.usuario</field>
      <field name ="arch" type="xml">
        <list>
          <field name="firstname"/>
          <field name="lastname"/>
          <field name="cedula"/>
          <field name="telefono"/>
          <field name="direccion"/>
          <field name="correo"/>
          <field name="tipo_usuario"/>
          <field name="historial_prestamo"/>
        </list>
      </field>
    </record>

    <record model ="ir.ui.view" id="biblioteca_usuario_form">
      <field name ="name">biblioteca usuario form</field>
      <field name ="model">biblioteca.usuario</field>
      <field name ="arch" type="xml">
        <form>
          <group>
          <field name="firstname"/>
          <field name="lastname"/>
          <field name="cedula"/>
          <field name="telefono"/>
          </group>
        </form>
      </field>
    </record>
    <!--editorial-->
    <record model ="ir.ui.view" id="biblioteca_editorial_list">
      <field name ="name">biblioteca editorial list</field>
      <field name ="model">biblioteca.editorial</field>
      <field name ="arch" type="xml">
        <list>
          <field name="editorial"/>
        </list>
      </field>
    </record>

    <record model ="ir.ui.view" id="biblioteca_editorial_form">
      <field name ="name">biblioteca editorial form</field>
      <field name ="model">biblioteca.editorial</field>
      <field name ="arch" type="xml">
        <form>
          <group>
          <field name="editorial"/>
          </group>
        </form>
      </field>
    </record>
    <!--personal-->
    <record model ="ir.ui.view" id="biblioteca_personal_list">
      <field name ="name">biblioteca editorial list</field>
      <field name ="model">biblioteca.personal</field>
      <field name ="arch" type="xml">
        <list>
          <field name="firstname"/>
          <field name="lastname"/>
          <field name="cargo"/>
          <field name="usuario"/>
          <field name="clave"/>
        </list>
      </field>
    </record>

    <record model ="ir.ui.view" id="biblioteca_personal_form">
      <field name ="name">biblioteca personal form</field>
      <field name ="model">biblioteca.personal</field>
      <field name ="arch" type="xml">
        <form>
          <group>
            <field name="firstname"/>
            <field name="lastname"/>
            <field name="cargo"/>
            <field name="usuario"/>
            <field name="clave"/>
          </group>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="biblioteca_libro_action_window">
      <field name="name">Menú Libros</field>
      <field name="res_model">biblioteca.libro</field>
      <field name="view_mode">list,form</field>
    </record>
    <record model="ir.actions.act_window" id="biblioteca_author_action_window">
      <field name="name">Menú Autores</field>
      <field name="res_model">biblioteca.author</field>
      <field name="view_mode">list,form</field>
    </record>
    <record model="ir.actions.act_window" id="biblioteca_usuario_action_window">
      <field name="name">Menú Usuarios</field>
      <field name="res_model">biblioteca.usuario</field>
      <field name="view_mode">list,form</field>
    </record>

    <record model="ir.actions.act_window" id="biblioteca_editorial_action_window">
      <field name="name">Menú Editoriales</field>
      <field name="res_model">biblioteca.editorial</field>
      <field name="view_mode">list,form</field>
    </record>

    <record model="ir.actions.act_window" id="biblioteca_personal_action_window">
      <field name="name">Menú Personal</field>
      <field name="res_model">biblioteca.personal</field>
      <field name="view_mode">list,form</field>
    </record>

