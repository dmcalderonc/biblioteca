<odoo>
  <data>
    <!-- explicit list view definition -->
    <!--libros-->
    <record model="ir.ui.view" id="biblioteca_libro_list">
      <field name="name">biblioteca libro list</field>
      <field name="model">biblioteca.libro</field>
      <field name="arch" type="xml">
        <list>
          <field name="firstname"/>
          <field name="author"/>
          <field name="isbn"/>
          <field name="genero"/>
          <field name="fecha"/>
          <field name="description"/>
          <field name="editorial"/>
          <field name="value"/>
          <field name="estado"/>
          <field name="value2"/>
          <field name="ubicacion"/>
        </list>
      </field>
    </record>

    <record model="ir.ui.view" id="biblioteca_libro_form">
      <field name="name">biblioteca libro form</field>
      <field name="model">biblioteca.libro</field>
      <field name="arch" type="xml">
        <form>
          <group>
          <field name="firstname"/>
          <field name="author"/>
          <field name="isbn"/>
          <field name="genero"/>
          <field name="fecha"/>
          <field name="description"/>
          <field name="editorial"/>
          <field name="value"/>
          <field name="estado"/>
          <field name="value2"/>
          <field name="ubicacion"/>
          </group>
        </form>
      </field>
    </record>
    <!--autores-->
    <record model ="ir.ui.view" id="biblioteca_author_list">
      <field name ="name">biblioteca author list</field>
      <field name ="model">biblioteca.author</field>
      <field name ="arch" type="xml">
        <list>
          <field name="firstname"/>
          <field name="lastname"/>
          <field name="alias"/>
        </list>
      </field>
    </record>

    <record model ="ir.ui.view" id="biblioteca_author_form">
      <field name ="name">biblioteca author form</field>
      <field name ="model">biblioteca.author</field>
      <field name ="arch" type="xml">
        <form>
          <group>
          <field name="firstname"/>
          <field name="lastname"/>
          <field name="alias"/>
          </group>
        </form>
      </field>
    </record>
    <!--usuarios-->
