          <field name="cedula"/>
          <field name="telefono"/>
          <field name="direccion"/>
          <field name="correo" widget="email"/>
          <field name="tipo_usuario"/>
          <field name="historial_prestamo"/>
          </group>
        </form>
      </field>
    </record>
    <!--editorial-->
    <record model ="ir.ui.view" id="biblioteca_editorial_list">
